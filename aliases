# Unix
alias ll="ls -alh"
alias ls="ls -FGhl"
alias open="xdg-open"
alias v="nvim"
alias vim="nvim"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Reload ZSH
alias z="source $HOME/.zshrc"

# Vim
alias vimdiff="vim -d"

# Misc
alias pdf="evince"
alias dots="cd $HOME/.dotfiles"
alias launch="cd $HOME/src/launchschool"
alias cl="cd $HOME/src/commonlit/commonlit"
alias notes="cd $HOME/Drive/notes"

alias pix="cd $HOME/pix/"

alias seagatebackup="rsync -ahv $HOME/pix/* /media/seagate/photos/pix/ --delete"
alias lgbackup="rsync -ahv $HOME/pix/* /media/sd/pix/ --delete"
